        <servlet-name>SearchByISBN</servlet-name>
        <url-pattern>/SearchByISBN</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ManageDDBB</servlet-name>
        <url-pattern>/ManageDDBB</url-pattern>
    </servlet-mapping>
