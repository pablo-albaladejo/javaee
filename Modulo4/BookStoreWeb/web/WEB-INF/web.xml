        <servlet-name>SearchByISBN</servlet-name>
        <servlet-class>bookstore.web.action.SearchByISBN</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ManageDDBB</servlet-name>
        <servlet-class>bookstore.web.action.ManageDDBB</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>FrontController</servlet-name>
        <url-pattern>*.do</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>SearchAllBooks</servlet-name>
        <servlet-class>bookstore.web.action.SearchAllBooks</servlet-class>
